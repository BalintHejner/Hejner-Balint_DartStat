<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Hejner_Balint_DartStat.Views.Statistics"
             Title="Statistics"
             BackgroundColor="#2D8346"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True"
             >

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#2D8346"/>
    </ContentPage.Behaviors>


    <VerticalStackLayout>
        <TableView Intent="Data">
            <TableRoot>
                <TableSection Title="Best out">
                    <TextCell x:Name="TC_bo" Text=""/>
                </TableSection>
                <TableSection Title="Number of leg">
                    <TextCell x:Name="TC_nol" Text=""/>
                </TableSection>
                <TableSection Title="Least arrows thrown">
                    <TextCell x:Name="TC_lat" Text=""/>
                </TableSection>
                <TableSection Title="Thrown Arrows">
                    <TextCell x:Name="TC_ta" Text=""/>
                </TableSection>
                <TableSection Title="Highest throw">
                    <TextCell x:Name="TC_ht" Text=""/>
                </TableSection>
                <TableSection Title="Average score">
                    <TextCell x:Name="TC_as" Text=""/>
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>