<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Hejner_Balint_DartStat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Hejner_Balint_DartStat"
    xmlns:view="clr-namespace:Hejner_Balint_DartStat.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Main Page" Icon="house.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Title="Game Mode">
            <ShellContent ContentTemplate="{DataTemplate view:GameMode}"/>
        </Tab>
    </TabBar>
    
    
</Shell>
