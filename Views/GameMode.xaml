<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cbx="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:viewmodel="clr-namespace:Hejner_Balint_DartStat.Viewmodels"
             x:Class="Hejner_Balint_DartStat.Views.GameMode"
             Title="GameMode"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#2D8346">

    <ContentPage.BindingContext>
        <viewmodel:GameModeViewModel/>
    </ContentPage.BindingContext>
    
    <HorizontalStackLayout VerticalOptions="Center">
        <Label Text="Choose the number of legs you want to play!"/>
        <StackLayout VerticalOptions="Center">
            <cbx:SfComboBox x:Name="comboBox" ItemsSource="{Binding Legs}" WidthRequest="30" TextColor="White" BackgroundColor="#525050" DropDownIconColor="#AF35AE" DisplayMemberPath="Legs" TextMemberPath="Legs" IsEditable="False"/>
        </StackLayout>
    </HorizontalStackLayout>
</ContentPage>