<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Hejner_Balint_DartStat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Hejner_Balint_DartStat"
    xmlns:view="clr-namespace:Hejner_Balint_DartStat.Views"
    Shell.FlyoutBehavior="Disabled"
    >

    <Shell.Resources>
        <DataTemplate x:Key="MainPageTemplate" xmlns:main="clr-namespace:Hejner_Balint_DartStat">
            <main:MainPage />
        </DataTemplate>
    </Shell.Resources>
    
    <TabBar>
        <Tab Title="Main Page" Icon="house.svg" Route="MainPage">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>
        </Tab>
    </TabBar>
    
    
</Shell>
