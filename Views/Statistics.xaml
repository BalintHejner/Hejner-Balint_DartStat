        <TableView Intent="Data">
            <TableRoot>
                <TableSection Title="Points">
                    <TextCell Text="{}"/>
                </TableSection>
                <TableSection Title="Number of leg">
                    <TextCell Text="{}"/>
                </TableSection>
                <TableSection Title="Thrown Arrows">
                    <TextCell Text="{}"/>
                </TableSection>
                <TableSection Title="Highest throw">
                    <TextCell Text="{}"/>
